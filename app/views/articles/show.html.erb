<% content_for :page_image,"#{@article.link}" %>

<div class="container-fluid container-bg">
    <div class="container mt-5">
        <h1 class="display-1 font-weight-bolder mt-5 text-center lh-1"><%= @article.title %></h1>
        <div class="mx-auto w-75 mt-5">
            <%= image_tag(@article.image, :class=>"w-100") %>
        </div>
         <div class="row mt-lg-5 justify-content-around">
                <div class="col-3">
                    <div class="row mt-1">
                        <%= @article.author %>
                    </div>
                    <div class="row mt-2">
                        <div >
                            <%= @article.date %>
                        </div>
                        <div class="ml-2">
                            * <%= @article.readingtime %> read
                        </div>
                    </div>
                </div>
                 <div class="content text-justify col-7 mb-sm-5 mx-auto font-size">
                    <%= @article.text %>
                </div>
            </div>

        <div class="container mb-5">
            <h2>Comments:-</h2>
            <div class="d-flex flex-column bd-highlight mb-2">
                <%= render partial:"comments/comment",locals: {commentable: @article} %>
            </div>

            <% if user_signed_in? %>
                <h2>Add a comment:</h2>
                <%= render partial:'comments/form' ,locals:{commentable: @article}%>
            <%end%>

            
           <% if user_signed_in? && current_user.admin?%>
                <%= link_to 'Edit', edit_article_path(@article.slug), :class=>"text-decoration-none btn btn-primary"%>
            <%end%> 

            <%= link_to 'Back', articles_path,:class=>"text-decoration-none btn btn-primary ml-3" %>
        </div>

    </div>
</div>